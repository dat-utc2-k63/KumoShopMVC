	<script>
		$(document).ready(function () {
			// Sự kiện Add to Cart
			$(document).on('click', '.add-to-cart', function (e) {
				e.preventDefault();

				var button = $(this);
				var productId = '@Model.ProductId';
				var quantity = $('#quantity').val();

				var colors = $('input[name="color"]:checked').map(function () {
					return $(this).val();
				}).get();

				var sizes = $('input[name="size"]:checked').map(function () {
					return $(this).val();
				}).get();

				if (colors.length === 0 || sizes.length === 0) {
					$('#cartMessage').html('<div class="alert alert-danger">Please select at least one color and one size.</div>');
					return;
				}
				console.log("Selected Colors: ", colors);
				console.log("Selected Sizes: ", sizes);

				// Hiệu ứng hình ảnh
				var cartIcon = button.find('i').clone();
				var buttonPosition = button.offset();
				var cartPosition = $('.cart-main').offset();
				cartIcon.css({
					position: 'absolute',
					top: buttonPosition.top,
					left: buttonPosition.left,
					'z-index': 9999
				}).appendTo('body').animate({
					top: cartPosition.top,
					left: cartPosition.left,
					width: 20,
					height: 20,
					opacity: 0.5
				}, 1000, function () {
					$(this).remove();
				});

				// Gửi dữ liệu qua Ajax
				$.post('@Url.Action("AddToCart", "Cart")', {
					id: productId,
					quantity: quantity,
					colors: colors,
					sizes: sizes
				})
					.done(function () {
						$('#cartMessage').html('<div class="alert alert-success">Added to cart successfully</div>');
					})
					.fail(function () {
						$('#cartMessage').html('<div class="alert alert-danger">Error adding to cart</div>');
					});
			});
		}); 
	</script>
	<script>
		$(document).on('click', '.add-to-favourite', function (e) {
			e.preventDefault();

			var button = $(this);
			var productId = button.data('product-id');

			$.ajax({
				type: 'POST',
				url: '@Url.Action("AddToFavourite", "User")',
				data: { productId: productId },
				success: function (response) {
					if (response.success) {
