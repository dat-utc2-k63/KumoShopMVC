@model IEnumerable<KumoShopMVC.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Search";
    Layout = "_TemplateProduct";
}

@await Html.PartialAsync("ProductItem", Model)
				<!-- row -->
<div class="clear-fix"></div>
<br />
<div class="col-xl-12 col-lg-12 col-md-12 text-center">
	<nav aria-label="Page navigation">
		<ul class="pagination justify-content-center">
			@if (ViewData["CurrentPage"] is int currentPage && ViewData["TotalPages"] is int totalPages)
			{
				for (var i = 1; i <= totalPages; i++)
				{
					<li class="page-item @(i == currentPage ? "active" : "")">
						<a class="btn stretched-link borders m-auto" href="@Url.Action("Index", new { page = i, category = ViewData["Category"] })">@i</a>
					</li>
				}
			}
		</ul>
	</nav>
</div>