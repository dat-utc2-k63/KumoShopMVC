@model KumoShopMVC.ViewModels.CategoryMenuVM
@{
    ViewData["Title"] = "EditCategory";
}
<h1>EditCategory</h1>

<div class="page-content">

    <!-- Start Container Fluid -->
    <div class="container-xxl">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Category Infomation</h4>
                    </div>
                    <form asp-action="CategoryEdit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CaterogyId" />
                        <div class="form-group">
                            <label for="NameCategory">Category Name</label>
                            <input type="text" class="form-control" id="NameCategory" name="NameCategory" value="@Model.NameCategory" required />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a href="@Url.Action("CategoryList", "Admin")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- End Container Fluid -->
